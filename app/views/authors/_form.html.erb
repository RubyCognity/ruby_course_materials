<%= form_for author do |f| %>
    <%= f.label :first_name, class: 'form-label' %>
    <%= f.text_field :first_name, style: 'display: block; margin-bottom: 10px;', class: 'form-group' %>
   
    <%= f.label :last_name, class: 'form-label' %>
    <%= f.text_field :last_name, style: 'display: block; margin-bottom: 10px;', class: 'form-group' %>
   
    <%= f.label :phone_number, class: 'form-label' %>
    <%= f.text_field :phone_number, style: 'display: block; margin-bottom: 10px;', class: 'form-group' %>
   
   
    <%= f.submit :submit, class: 'btn btn-primary' %>
<% end %> 
