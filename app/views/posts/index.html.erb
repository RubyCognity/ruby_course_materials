<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Content</th>
            <th scope="col">Action 1</th>
            <th scope="col">Action 2</th>
        </tr>
    </thead>
     <tbody>
        <%- @posts.each do |post|%>
            <tr>
                <th scope="row"><%= post.id %></th>
                <td><%= link_to post.content, post_path(post) %></td>
                <td><%= link_to 'Edit', edit_post_path(post), class: "btn btn-primary" %></td>
                <td><%= link_to 'Delete', post, data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }, class: "btn btn-danger" %></td>
                <br>
                <hr/>
            </tr>
        <% end %>
    </tbody>
</table>
<br>
<%= link_to 'Create new post', new_post_path, class: 'btn btn-primary' %> 

<strong>Tags</strong>
<% @posts.includes(:tag).each do |post| %> 
    <%= post.tag.name %>
    <hr/>
<% end %>